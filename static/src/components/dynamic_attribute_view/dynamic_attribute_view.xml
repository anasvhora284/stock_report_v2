<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="stock_report_v2.DynamicAttributeView" owl="1">
        <Layout t-props="layoutProps">
            <div class="o_dynamic_attribute_view">
                <!-- Header with search and filter controls -->
                <div class="main-haeder w-100 d-flex justify-content-between p-3">
                    <span class="page-name-header-text">
                        <t t-if="state.config" t-esc="state.config.name"/>
                        <t t-else="">Dynamic Attribute Report</t>
                    </span>

                    <div class="searchbar-container-class">
                        <div class="search-container d-flex align-items-center">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-search"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Search products..." t-on-input="(ev) => this.onSearchInput(ev.target.value)" t-att-value="state.searchInput" t-ref="searchInput" />
                                <button class="btn btn-outline-secondary" type="button" t-on-click="() => this.clearSearch()">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                            <div class="ms-2">
                                <select class="form-select w-auto" t-on-change="(ev) => this.onFilterChange(ev.target.value)">
                                    <option value="all">All Products</option>
                                    <option value="positive">Available (&gt; 0)</option>
                                    <option value="negative">Negative Stock (&lt; 0)</option>
                                    <option value="zero">Zero Stock (= 0)</option>
                                    <option value="reserved">Has Reserved</option>
                                    <option value="replenishment">Has Incoming</option>
                                    <option value="outgoing">Has Outgoing</option>
                                </select>
                            </div>
                            <div class="ms-2">
                                <button t-on-click="refreshData" class="btn btn-secondary">
                                    <i class="fa fa-refresh" t-att-class="{ 'fa-spin': state.loading }"/> Refresh
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Loading indicator -->
                <div t-if="state.loading" class="loading-screen">
                    <div class="spinner-container">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <div class="loading-text mt-3">Loading product data...</div>
                    </div>
                </div>

                <!-- No data message -->
                <div t-elif="state.products.length === 0" class="text-center p-5">
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle me-2"/>
                        No product data available. Please check your inventory configuration.
                    </div>
                </div>

                <!-- Product matrix display - Matrix style like Stock Analysis Table View -->
                <div t-else="" class="o_product_attribute_matrix">
                    <div class="product-matrix-container p-2">
                        <div class="table-responsive">
                            <table class="table table-bordered main-table">
                                <thead>
                                    <tr>
                                        <th class="product-image-header text-center">Product Image</th>
                                        <th class="product-name-header text-center">Product Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Loop through filtered products -->
                                    <t t-if="getFilteredProducts().length > 0">
                                        <t t-foreach="getFilteredProducts()" t-as="product" t-key="product.id">
                                            <tr class="product-row" t-att-data-product-id="product.id">
                                                <!-- Product image cell -->
                                                <td class="product-image-cell">
                                                    <img t-att-src="product.image_url" 
                                                         t-att-alt="product.name"
                                                         class="product-image img-fluid rounded-3"
                                                         style="max-width: 250px; max-height: 250px; object-fit: contain;"
                                                         t-att-data-product-id="product.id"/>
                                                </td>

                                                <!-- Matrix style product details -->
                                                <td class="product-name-cell">
                                                    <!-- Only show attribute matrix if we have multiple attributes -->
                                                    <t t-if="state.attributes.length > 1">
                                                        <table class="table table-bordered inner-table mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="text-center w-25">
                                                                    <div class="product-name">
                                                                        <a t-att-href="product.product_url" class="text-decoration-none">
                                                                            <strong class="text-danger fs-5">
                                                                                <t t-esc="product.name"/>
                                                                            </strong>
                                                                        </a>
                                                                    </div>
                                                                    </th>                                                                    <!-- Empty corner cell -->
                                                                    <t t-if="product.matrix_values &amp;&amp; product.matrix_values.column_headers">
                                                                        <th t-foreach="product.matrix_values.column_headers" t-as="column" t-key="column_index" class="text-center size-header-cell">
                                                                            <t t-esc="column"/>
                                                                        </th>
                                                                    </t>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <t t-if="product.matrix_values &amp;&amp; product.matrix_values.rows">
                                                                    <tr t-foreach="product.matrix_values.rows" t-as="row" t-key="row_index">
                                                                        <td class="color-name-cell"><t t-esc="row.header"/></td>
                                                                        <td t-foreach="row.cells" t-as="cell" t-key="cell_index"
                                                                            t-attf-class="quantity-cell-container text-center {{ this.getVariantCellClass(cell) }}" 
                                                                            t-on-click="() => this.handleCellClick(cell, product.id)">
                                                                            <div t-if="cell &amp;&amp; cell.qty !== undefined" 
                                                                                     t-attf-class="quantity-cell {{ getQuantityClass(cell.qty) }}">
                                                                                <t t-esc="formatQty(cell.qty)"/>
                                                                            </div>
                                                                            <div t-else="" class="quantity-cell no-quantity">-</div>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </t>

                                                    <!-- Simple list for single attribute or no attribute products -->
                                                    <t t-else="">
                                                        <table class="table table-bordered inner-table mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="text-center">Variant</th>
                                                                    <th class="text-center">Quantity</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr t-foreach="product.variants" t-as="variant" t-key="variant.id" class="variant-row" t-att-data-variant-id="variant.id">
                                                                    <td class="text-center">
                                                                        <t t-if="variant.default_code">
                                                                            <t t-esc="variant.default_code"/>
                                                                        </t>
                                                                        <t t-elif="variant.attributes &amp;&amp; Object.keys(variant.attributes).length">
                                                                            <t t-foreach="Object.entries(variant.attributes)" t-as="attr" t-key="attr[0]">
                                                                                <t t-esc="getAttributeDisplayValue(attr[0], attr[1])"/>
                                                                            </t>
                                                                        </t>
                                                                        <t t-else="">No Variant</t>
                                                                    </td>
                                                                    <td class="quantity-cell-container text-center" t-on-click="() => this.handleVariantClick(variant, product.id)">
                                                                        <div t-attf-class="quantity-cell {{ getQuantityClass(variant.qty) }}">
                                                                            <t t-esc="formatQty(variant.qty)"/>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="2">
                                                <div class="no-products-found-div text-center p-4 text-muted">
                                                    <i class="fa fa-box-open fa-2x mb-2" aria-hidden="true"></i>
                                                    <p class="mb-0 fw-bold fs-lg">No products available to show here.</p>
                                                    <p class="mb-0 fw-bold fs-lg">or</p>
                                                    <p class="mb-0 fw-bold fs-lg">No products found matching your filters.</p>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <!-- Pagination Controls -->
                    <div t-if="state.totalCount > 0" class="pagination-container d-flex justify-content-between align-items-center p-3 border-top">
                        <div class="pagination-info">
                            <span>Showing <b t-esc="state.products.length"/> of <b t-esc="state.totalCount"/> products</span>
                        </div>
                        <div class="pagination-controls">
                            <nav aria-label="Product pagination">
                                <ul class="pagination mb-0">
                                    <li t-attf-class="page-item {{ state.currentPage === 1 ? 'disabled' : '' }}">
                                        <a class="page-link" href="#" aria-label="Previous" t-on-click.prevent="() => this.prevPage()">
                                            <span aria-hidden="true">&#171;</span>
                                        </a>
                                    </li>
                                    
                                    <t t-set="startPage" t-value="Math.max(1, state.currentPage - 2)"/>
                                    <t t-set="endPage" t-value="Math.min(state.totalPages || 1, startPage + 4)"/>
                                    <t t-set="startPage" t-value="Math.max(1, endPage - 4)"/>
                                    
                                    <t t-foreach="Array.from({length: (endPage - startPage + 1)}, (_, i) => startPage + i)" t-as="page" t-key="page">
                                        <li t-attf-class="page-item {{ page === state.currentPage ? 'active' : '' }}">
                                            <a class="page-link" href="#" t-on-click.prevent="() => this.changePage(page)" t-esc="page"></a>
                                        </li>
                                    </t>
                                    
                                    <li t-attf-class="page-item {{ state.currentPage >= (state.totalPages || 1) ? 'disabled' : '' }}">
                                        <a class="page-link" href="#" aria-label="Next" t-on-click.prevent="() => this.nextPage()">
                                            <span aria-hidden="true">&#187;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Variant Details Modal -->
                <div t-if="state.showVariantModal" class="modal fade show d-block" role="dialog">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content shadow rounded-3">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title fw-semibold">
                                    <t t-esc="state.selectedVariant.product.name"/> - [<t t-esc="state.selectedVariant.attributesList"/>]
                                </h5>
                                <button type="button" class="btn-close btn-close-white" aria-label="Close" t-on-click="() => this.closeVariantModal()"></button>
                            </div>
                            <div class="modal-body py-4">
                                <div class="row g-4 align-items-start">
                                    <!-- Image Section - Left Side -->
                                    <div class="col-md-4 border-end">
                                        <div class="d-flex justify-content-center align-items-center h-100">
                                            <img t-if="state.selectedVariant.image" 
                                                t-att-src="state.selectedVariant.image" 
                                                class="img-fluid rounded border" 
                                                alt="Variant"/>
                                            <div t-if="!state.selectedVariant.image" class="w-100 text-center py-5 bg-light border rounded">
                                                <span class="text-muted">No Image Available</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Details - Right Side -->
                                    <div class="col-md-8">
                                        <!-- Stock Information - Only show this section -->
                                        <h6 class="fw-bold mb-3">Stock Information</h6>
                                        <div class="table-responsive">
                                            <table class="table table-bordered align-middle text-center mb-0 product-details-table">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col">Quantity Type</th>
                                                        <th scope="col">Value</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="on-hand-row">On Hand</td>
                                                        <td>
                                                            <div t-attf-class="quantity-cell {{ state.selectedVariant.quantityClass }}">
                                                                <t t-esc="state.selectedVariant.qty_on_hand"/>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="reserved-row">Reserved</td>
                                                        <td>
                                                            <div class="quantity-cell qty-reserved">
                                                                <t t-esc="state.selectedVariant.qty_reserved"/>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="incoming-row">Incoming</td>
                                                        <td>
                                                            <div class="quantity-cell qty-replenishment">
                                                                <t t-esc="state.selectedVariant.qty_incoming"/>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="outgoing-row">Outgoing</td>
                                                        <td>
                                                            <div class="quantity-cell qty-normal">
                                                                <t t-esc="state.selectedVariant.qty_outgoing"/>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary me-2" t-on-click="() => this.closeVariantModal()">Close</button>
                                <a t-att-href="state.selectedVariant.product_url" class="btn btn-primary">
                                    <i class="fa fa-external-link"></i> Open Product
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Backdrop -->
                <div t-if="state.showVariantModal" class="modal-backdrop fade show"></div>
            </div>
        </Layout>
    </t>
</templates> 